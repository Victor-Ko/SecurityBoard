<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
 
<mapper namespace="BoardDao">
 	
 	<select id="selectBoard" parameterType="com.victor.securityboard.board.domain.BoardVO" resultType="com.victor.securityboard.board.domain.BoardVO">
 		SELECT *
 		FROM board
 		<where>
	 		<if test="board_seq gt 0">
	 			board_seq = #{board_seq}
	 		</if>
	 		<if test="user_id != null">
	 			user_id LIKE '%' || #{user_id}
	 		</if>
 		</where>
 	</select> 
 	
 	<insert id="insertBoard" parameterType="com.victor.securityboard.board.domain.BoardVO">
 		INSERT INTO board(user_id,board_title,board_views,board_reg_date,board_contents)
 		VALUES(#{user_id},#{board_title},0,now(),#{board_contents})
 	</insert>
</mapper>
